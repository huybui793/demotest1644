<div class="container text-center">
   <h1 class="text text-warning mb-2">Online Movie Store</h1>
   <div class="row mt-3 mb-3">
      <div class="col">
         <a class="btn btn-primary" href="/movie/sort/asc">Sort title ascending</a>
         <a class="btn btn-warning" href="/movie/sort/desc">Sort title descending</a>
      </div>
      <div class="col md-4">
         <form action="/movie/search" method="post">
            <input class="form-control" type="search" name="title" placeholder="Search by title" required>
         </form>
      </div>
   </div>
   <div class="card-group">
      <div class="row">
         {{#each movies }}
         <div class="card col-md-3 mb-3">
            <img class="card-img-top mt-3" src="{{ poster }}" width="180" height="150">
            <div class="card-body">
               <h4 class="card-title text-success">{{ title }}</h4>
               <p class="fw-bold card-text text-primary">{{ year }}</p>
               <form action="/movie/rent" method="post">
                 <input type="hidden" name="id" value="{{_id}}">
                 <input type="submit" class="btn btn-danger" value="Rent"/>
               </form>
            </div>
         </div>
         {{/each}}
      </div>
   </div>
</div>